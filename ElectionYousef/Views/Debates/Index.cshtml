@{
    ViewBag.Title = "Index";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<h2 class="text-center my-4" style="color:blue;">المناظرات</h2>

@using (Html.BeginForm("Index", "Debates", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <style>

        .form-container {
            text-align: end;
            align-items: center;
            height: 100vh; /* Full viewport height */
            width: 50%;
        }

            .form-container input {
                margin: 0 12%;
            }

        .card {
            border-radius: 0.5rem;
            overflow: hidden;
        }

        .btn-custom {
            background-color: blue;
            color: white;
            border: none;
        }

            .btn-custom:hover {
                background-color: darkblue;
                color: white;
            }
    </style>

    <div class="container form-container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="Circle_ID" class="form-label">رقم الدائرة</label>
                            <input name="Circle_ID" type="text" class="form-control" id="Circle_ID">
                        </div>
                        <div class="mb-3">
                            <label for="Date_Of_Debate" class="form-label">تاريخ المناقشة</label>
                            <input name="Date_Of_Debate" type="date" class="form-control" id="Date_Of_Debate">
                        </div>
                        <div class="mb-3">
                            <label for="Topic" class="form-label">عنوان المناظرة</label>
                            <input name="Topic" type="text" class="form-control" id="Topic">
                        </div>
                        <div class="mb-3">
                            <label for="First_Candidate" class="form-label">المرشح الأول</label>
                            <input name="First_Candidate" type="text" class="form-control" id="First_Candidate">
                        </div>
                        <div class="mb-3">
                            <label for="First_Candidate_List" class="form-label">رقم قائمة المرشح الأول</label>
                            <input name="First_Candidate_List" type="text" class="form-control" id="First_Candidate_List">
                        </div>
                        <div class="mb-3">
                            <label for="Second_Candidate" class="form-label">المرشح الثاني</label>
                            <input name="Second_Candidate" type="text" class="form-control" id="Second_Candidate">
                        </div>
                        <div class="mb-3">
                            <label for="Second_Candidate_List" class="form-label">رقم قائمة المرشح الثاني</label>
                            <input name="Second_Candidate_List" type="text" class="form-control" id="Second_Candidate_List">
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-custom">تقديم الطلب </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Check if the success parameter is present in the URL
        var urlParams = new URLSearchParams(window.location.search);
        if (urlParams.has('success') && urlParams.get('success').toLowerCase() === 'true') {
            Swal.fire({
                title: 'تم تقديم الطلب بنجاح',
                icon: 'success',
                confirmButtonText: 'حسنًا'
            });
        }
    </script>
}


