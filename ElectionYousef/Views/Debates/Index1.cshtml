

@model IEnumerable<ElectionYousef.Models.Debate>

@{
    ViewBag.Title = "Index";
}

<head>
    <style>
        body {
            background-color: #f8f9fa;
        }

        h2 {
            color: #007bff;
            margin-bottom: 20px;
        }

        .table {
            background-color: #ffffff;
            border: 1px solid #dee2e6;
            border-radius: 0.25rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        }

            .table th {
                background-color: blue;
                color: #ffffff;
                text-align: center;
            }

            .table td {
                text-align: center;
            }

        .btn-primary {
            background-color: blue;
            border-color: blue;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .card {
            transition: background-color 0.3s ease;
            background-color: cornflowerblue;
        }

            .card:hover {
                background-color: #e0f7fa;
            }
    </style>
</head>

<body>
    <div class="container">
        <h2 class="text-center my-4">طلب المناظرات</h2>

        @*<p class="text-center">
                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary mb-3" })
            </p>*@
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        Circle ID
                    </th>
                    <th>
                        Date Of Debate
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Topic)
                    </th>
                    <th>
                        First Candidate
                    </th>
                    <th>
                        First Candidate List
                    </th>
                    <th>
                        Second Candidate
                    </th>
                    <th>
                        Second Candidate List
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Circle_ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date_Of_Debate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Topic)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.First_Candidate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.First_Candidate_List)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Second_Candidate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Second_Candidate_List)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
